

<h1>Product Information: <%= @product.name %></h1>


<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Supply Cost</th>
    <th>Customer Price</th>
    <th>Product Type</th>
    <th>Desired Quantity</th>
  </tr>
  <tr>
    <td><%= @product.name %></td>
    <td><%= @product.description %></td>
    <td><%= @product.quantity %></td>
    <td><%= @product.supply_cost %></td>
    <td><%= @product.customer_price %></td>
    <td><%= @product.product_type %></td>
    <td><%= @product.desired_quantity %></td>
  </tr>
</table>


<p><a href="/products/<%= @product.id %>/editproduct">Edit Product</a></p>

<form method="post" action="/products/<%= @product.id %>/delete">
  <input type="submit" value="Delete Product"/>
</form>

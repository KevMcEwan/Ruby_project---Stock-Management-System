<br>

<form method="post" action="/products/<%= @product.id %>">
  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @product.name %>"
  />

  <label for="description-field">Description:</label>
  <input
  type="text"
  name="description"
  id="description-field"
  value="<%= @product.description %>"
  />

  <label for="quantity-field">Quantity:</label>
  <input
  type="number"
  name="quantity"
  id="quantity-field"
  value="<%= @product.quantity %>"
  />

  <label for="supply-cost-field">Supply Cost:</label>
  <input
  type="number"
  step="0.01"
  name="supply_cost"
  id="supply-cost-field"
  value="<%= @product.supply_cost %>"
  />

  <label for="customer-price-field">Customer Price:</label>
  <input
  type="number"
  step="0.01"
  name="customer_price"
  id="customer-price-field"
  value="<%= @product.customer_price %>"
  />

  <label for="product-type-field">Select a Product Type:</label>
  <select name="product_type" id="product-type">
    <option value="Tinned Foods"<%="selected" if @product.product_type == "Tinned Foods"%>>Tinned Foods</option>
    <option value="Fresh Foods"<%="selected" if @product.product_type == "Fresh Foods"%>>Fresh Foods</option>
    <option value="Fresh Foods"<%="selected" if @product.product_type == "Fresh Foods"%>>Fresh Foods</option>
    <option value="Frozen Foods"<%="selected" if @product.product_type == "Frozen Foods"%>>Frozen Foods</option>
    <option value="Soft Drinks"<%="selected" if @product.product_type == "Soft Drinks"%>>Soft Drinks</option>
    <option value="Alcoholic Drinks"<%="selected" if @product.product_type == "Alcoholic Drinks"%>>Alcholic Drinks</option>
    <option value="Dairy"<%="selected" if @product.product_type == "Dairy"%>>Dairy</option>
    <option value="Bathroom"<%="selected" if @product.product_type == "Bathroom"%>>Fresh Foods</option>
    <option value="Food Cupboard"<%="selected" if @product.product_type == "Food Cupboard"%>>Food Cupboard</option>
    <option value="Confectionary"<%="selected" if @product.product_type == "Confectionary"%>>Confectionary</option>
    <option value="Snacks"<%="selected" if @product.product_type == "Snacks"%>>Snacks</option>
  </select>


  <label for="desired-quantity-field">Desired Quantity:</label>
  <input
  type="number"
  name="desired_quantity"
  id="desired-quantity-field"
  value="<%= @product.desired_quantity %>"
  />



  <input type='submit' value="Update Product">
</form>

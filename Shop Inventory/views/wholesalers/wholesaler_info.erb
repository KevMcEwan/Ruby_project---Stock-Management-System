

<h1>Wholesaler Information: <%= @wholesaler.wholesaler_name %></h1>

<div class="btn-group2">
  <form method="get" action="/wholesalers/<%= @wholesaler.id %>/editwholesaler">
    <button>Edit Wholesaler</button>
  </form>

  <form method="post" action="/wholesalers/<%= @wholesaler.id %>/delete">
    <button>Delete Wholesaler</button>
  </form>
</div>

<br>

<table>
  <tr>
    <th>Wholesaler Name</th>
    <th>Contact Name</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>
  <tr>
    <td><%= @wholesaler.wholesaler_name %></td>
    <td><%= @wholesaler.contact_name %></td>
    <td><%= @wholesaler.email %></td>
    <td><%= @wholesaler.phone %></td>
  </tr>
</table><br>

<table cellpadding=5px>
  <tr>
    <th>Product Name</th>
    <th>Description</th>
    <th>Product Type</th>
    <th>Supply Price</th>
  </tr>
  <% result = @wholesaler.stock_supply %>
  <% result.each do |stock_supply| %>
  <tr>
    <td><%= stock_supply.product.name %></td>
    <td><%= stock_supply.product_description %></td>
    <td><%= stock_supply.product.product_type %></td>
    <td><%= "Â£ " '%.2f' % stock_supply.supply_price %></td>
  </tr>
  <% end %>
</table>

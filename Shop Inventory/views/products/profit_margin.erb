<h1>Profit Margin per product</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Supply Cost</th>
    <th>Customer Price</th>
    <th>Profit Margin</th>

  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><a href="products/<%=product.id%>"  "><%= product.name %></a></td>
      <td><%= product.description %></td>
      <td><%= "£ " '%.2f' % product.supply_cost %></td>
      <td><%= "£ " '%.2f' % product.customer_price %></td>
      <td><%= (((product.customer_price/product.supply_cost)-1)*100).round(2)%>%</td>
        
    </tr>
  <% end %>
</table>


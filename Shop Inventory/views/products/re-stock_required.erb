<h1>Re-Stock required</h1>
<h3>Showing all products where "Quantity in Stock" is less than 20% of the Desired Quantity</h3>

<table cellpadding=10px>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Quantity in Stock</th>
    <th>Product Type</th>
    <th>Desired Quantity</th>
    <th>Quantity to Order</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><a href="/products/<%=product.id%>"  "><%= product.name %></a></td>
      <td><%= product.description %></td>
      <td><%= product.quantity.round(0) %></td>
      <td><%= product.product_type %></td>
      <td><%= product.desired_quantity.round(0) %></td>
      <td><%= (product.desired_quantity - product.quantity).round(0) %></td>
    </tr>
  <% end %>
</table>



<h1>Product Supply Information: <%= @stock_supply.product.name %></h1>

<div class="btn-group2">
  <form method="get" action="/stock_supply/<%= @stock_supply.id %>/edit_stock_supply">
    <button>Edit Product Supply entry</button>
  </form>

  <form method="post" action="/stock_supply/<%= @stock_supply.id %>/delete">
    <button>Delete Product Supply entry</button>
  </form>
</div>

<br>

<table cellpadding=10px>
  <tr>
    <th>Product</th>
    <th>Product Description</th>
    <th>Wholesale Supplier</th>
    <th>Supply Price</th>
    <th>Customer Price</th>
    <th>Profit Margin</th>
  </tr>
  <tr>
    <td><%= @stock_supply.product.name %></td>
    <td><%= @stock_supply.product_description %></td>
    <td><%= result = @stock_supply.wholesaler.wholesaler_name %></td>
    <td><%= "£ " '%.2f' % @stock_supply.supply_price %></td>
    <td><%= "£ " '%.2f' % @stock_supply.customer_price %></td>
    <td><%= '%.2f' % (((@stock_supply.customer_price.to_f/@stock_supply.supply_price.to_f)-1)*100) %>%</td>
  </tr>
</table>
